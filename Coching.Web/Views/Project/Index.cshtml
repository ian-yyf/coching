@using Coching.Model;
@model ProjectViewModel

@{
    ViewData["Title"] = "项目";
}

<style>
    .container {
        padding: 5px;
    }
    .item-container {
        width: 300px;
        height: 150px;
        display: inline-block;
        -webkit-box-shadow: inset 0 0 5px rgba(0,0,0,0.2);
        border-radius: 5px;
        margin: 5px;
        cursor: pointer;
        transition: all 0.3s;
        padding: 15px;
        position: relative;
    }
        .item-container:hover {
            transform: translate(0, -3px);
        }
    .add-item {
        text-align: center;
        position: relative;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.5;
    }
    .add-item img {
        margin-bottom: 10px;
    }
    .logo, .partner-image {
        border-radius: 50%;
    }
    .logo {
        width: 50px;
        height: 50px;
        margin-left: 10px;
    }
    .partner-image {
        width: 20px;
        height: 20px;
        margin-right: 5px;
    }
    .partners {
        position: absolute;
        bottom: 15px;
        left: 15px;
        right: 15px;
    }
    .descrip {
        margin-top: 15px;
    }
    .ellipsis-4 {
        display: -webkit-box;
        overflow: hidden;
        white-space: normal !important;
        text-overflow: ellipsis;
        word-wrap: break-word;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
    }
    .title img {
        height: 18px;
        margin-left: 5px;
        opacity: 0.8;
    }
        .title img:hover {
            opacity: 1;
        }
</style>

<div class="container">
    @foreach (var project in Model.Projects)
    {
        <div id="@project.ID" class="item-container" onclick="go_coching(this)">
            <div class="layout-row title">
                <div class="ellipsis-1 text-color-important text-size-common-mid flex">@(project.Name ?? ".")</div>
                <img src="~/res/workers.png" title="成员管理" onclick="workers(this)" />
                <img src="~/res/edit.png" title="编辑" onclick="edit(this)" />
            </div>
            <div class="layout-row descrip">
                <div class="ellipsis-4 flex text-color-descrip text-size-descrip">@(project.Description ?? ".")</div>
                <img class="logo" src="@Url.projectHeader(project.Header)" />
            </div>
            <div class="layout-row layout-center-h partners">
                @foreach (var p in project.Partners)
                {
                    <img id="@p.ID" class="partner-image" src="@Url.header(p.User.Header)" title="@($"{p.User.Name}[{p.RoleTitle}]")" />
                }
            </div>
        </div>
    }
    <div class="item-container" onclick="add_project()">
        <div class="add-item">
            <img src="~/res/add.png" />
            <div>创建新项目</div>
        </div>
    </div>
</div>

<script>
    var tool = {
        partnerHtml: function (p) {
            return '<img id="' + p.ID + '" class="partner-image" src="' + header(p.User.Header) + '" title="' + p.User.Name + '[' + p.RoleTitle + ']" />';
        },
        projectInnerHtml: function (project) {
            var html = '<div class="layout-row title">'
                + '<div class="ellipsis-1 text-color-important text-size-common-mid flex">' + (project.Name || '.') + '</div>'
                + '<img src="@Url.Content("~/res/workers.png")" title="成员管理" onclick="workers(this)" />'
                + '<img src="@Url.Content("~/res/edit.png")" title="编辑" onclick="edit(this)" />'
                + '</div>'
                + '<div class="layout-row descrip">'
                + '<div class="ellipsis-4 flex text-color-descrip text-size-descrip">' + (project.Description || '.') + '</div>'
                + '<img class="logo" src="' + projectHeader(project.Header) + '" />'
                + '</div>'
                + '<div class="layout-row layout-center-h partners">';

            for (var i = 0; i < project.Partners.length; i++) {
                html += this.partnerHtml(project.Partners[i]);
            }
            return html + '</div>';
        },
        projectHtml: function (project) {
            return '<div id="' + project.ID + '" class="item-container" onclick="go_coching(this)">'
                + this.projectInnerHtml(project)
                + '</div>';
        }
    }
</script>

<script>
    layui.define(["layer"],
        function (i) {
        }
    );

    function go_coching(e) {
        location.href = '@Url.Action("Index", "Coching")' + '?projectGuid=' + $(e).attr('id');
    }

    function add_project() {
        layer.open({
            type: 2,
            title: '添加新项目',
            maxmin: true,
            area: ['80%', '80%'],
            shadeClose: true,
            content: '@Html.Raw(Url.Action("Add", new { callback = "add_project_success" }))',
        });
    }

    function add_project_success(result) {
        $('.container').prepend(tool.projectHtml(result));
    }

    function edit(e) {
        var ev = window.event || arguments.callee.caller.arguments[0];

        if (window.event) {
            ev.cancelBubble = true;
        }
        else {
            ev.stopPropagation();
        }

        layer.open({
            type: 2,
            title: '编辑',
            maxmin: true,
            area: ['80%', '80%'],
            shadeClose: true,
            content: '@Html.Raw(Url.Action("Modify", new { callback = "edit_project_success" }))' + '&id=' + $(e).parents('*[id]').attr('id'),
        });
    }

    function edit_project_success(result) {
        $('#' + result.ID).html(tool.projectInnerHtml(result));
    }

    function workers(e) {
        var ev = window.event || arguments.callee.caller.arguments[0];

        if (window.event) {
            ev.cancelBubble = true;
        }
        else {
            ev.stopPropagation();
        }

        layer.open({
            type: 2,
            title: '成员管理',
            maxmin: true,
            area: ['80%', '80%'],
            shadeClose: true,
            content: '@Html.Raw(Url.Action("Partners", new { notify = "partners_notify" }))' + '&projectGuid=' + $(e).parents('*[id]').attr('id'),
        });
    }

    function partners_notify(project, del, add) {
        if (del) {
            $('#' + project + ' #' + del).remove();
        }
        if (add) {
            if ($('#' + project + ' #' + add.ID).length == 0) {
                $('#' + project + ' .partners').append(tool.partnerHtml(add));
            }
        }
    }
</script>